<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- HEADER: Tanggal & Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Tanggal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/text_secondary"
                    android:layout_marginEnd="@dimen/spacing_xs"/>

                <TextView
                    android:id="@+id/tvTanggal"
                    style="@style/TextAppearance.App.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07 Jan 2024"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELESAI"
                style="@style/TextAppearance.App.BodySmall"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_status_selesai"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

        <!-- MOBIL INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Icon Mobil -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/spacing_md"
                android:src="@drawable/ic_car"
                android:padding="10dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/primary_50"
                app:tint="@color/primary"
                android:layout_gravity="center_vertical"/>

            <!-- Info Mobil -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Plat Nomor -->
                <TextView
                    android:id="@+id/tvPlatNomor"
                    style="@style/TextAppearance.App.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KH 2332 QP"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="2dp"/>

                <!-- Merek -->
                <TextView
                    android:id="@+id/tvMerek"
                    style="@style/TextAppearance.App.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Honda"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="@dimen/spacing_md"/>

        <!-- DESKRIPSI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_sm">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_build"
                app:tint="@color/text_tertiary"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/spacing_sm"/>

            <TextView
                android:id="@+id/tvDeskripsi"
                style="@style/TextAppearance.App.BodyMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ganti Oli"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <!-- BIAYA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Biaya"
                style="@style/TextAppearance.App.BodySmall"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/bg_dashed_divider"/>

            <TextView
                android:id="@+id/tvBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 70.000"
                style="@style/TextAppearance.App.TitleMedium"
                android:textColor="@color/text_stat_money"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>