<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- HEADER -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Laporan Servis"
        style="@style/TextAppearance.App.TitleLarge"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"/>

    <!-- NAMA PELANGGAN -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Pelanggan"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFilterNamaPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- STATUS SERVIS -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Servis"
        style="@style/TextAppearance.App.TitleMedium"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/spinnerFilterStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Semua"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TANGGAL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rentang Tanggal"
        style="@style/TextAppearance.App.TitleMedium"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTanggalDari"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dari"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_calendar"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTanggalSampai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sampai"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_calendar"/>
    </LinearLayout>

    <!-- ACTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            style="@style/Widget.Material3.Button.TextButton"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terapkan"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
