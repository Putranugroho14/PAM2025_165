<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App" parent="TextAppearance.AppCompat" />
    <style name="TextAppearance.App.EmptyState" parent="TextAppearance.App" />
    <style name="Widget.App" parent="android:Widget" />
    <style name="Widget.App.Badge" parent="Widget.App">
        <item name="android:paddingStart">@dimen/badge_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/badge_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/badge_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/badge_padding_vertical</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Widget.App.SearchView" parent="Widget.App" />

    <style name="TextAppearance.App.DisplayLarge">
        <item name="android:textSize">@dimen/text_4xl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- HeadlineLarge, HeadlineMedium moved to themes.xml -->

    <style name="TextAppearance.App.HeadlineSmall">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- TitleLarge, TitleMedium moved to themes.xml -->

    <style name="TextAppearance.App.TitleSmall">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.BodyLarge">
        <item name="android:textSize">@dimen/text_base</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- BodyMedium, BodySmall moved to themes.xml -->

    <style name="TextAppearance.App.LabelLarge">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.App.LabelMedium">
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.App.Badge.Proses" parent="Widget.App.Badge">
        <item name="android:background">@drawable/bg_badge_proses</item>
        <item name="android:textColor">@color/status_proses_text</item>
    </style>

    <style name="Widget.App.Badge.Selesai" parent="Widget.App.Badge">
        <item name="android:background">@drawable/bg_badge_selesai</item>
        <item name="android:textColor">@color/status_selesai_text</item>
    </style>

    <style name="Widget.App.Badge.Batal" parent="Widget.App.Badge">
        <item name="android:background">@drawable/bg_badge_batal</item>
        <item name="android:textColor">@color/status_batal_text</item>
    </style>

    <style name="Widget.App.EmptyState">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_2xl</item>
    </style>

    <style name="TextAppearance.App.EmptyState.Title">
        <item name="android:textSize">@dimen/text_lg</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.App.EmptyState.Message">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="Widget.App.SearchView.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_md</item>
        <item name="android:background">@color/surface</item>
        <item name="android:elevation">@dimen/elevation_sm</item>
    </style>

    <!-- Widget.App.SectionHeader moved to themes.xml -->

    <style name="Widget.App.Shimmer">
        <item name="android:background">@drawable/bg_shimmer</item>
    </style>

</resources>